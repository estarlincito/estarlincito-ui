{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.js",
    "src/index.ts",
    "src/title.tsx"
  ],
  "exclude": ["node_modules"]
}
